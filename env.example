# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rwanda_drone_community"

# JWT Configuration (REQUIRED - Generate a strong secret)
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long"

# Node Environment
NODE_ENV="development"

# Security Configuration
SESSION_SECRET="your-super-secure-session-secret-at-least-32-characters-long"

# File Upload Configuration
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/jpg,image/png,image/gif,image/webp"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="5"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Cookie Configuration
COOKIE_SAME_SITE="strict"
COOKIE_MAX_AGE="604800"

# Docker-specific configurations
# Uncomment and modify these for Docker deployment
